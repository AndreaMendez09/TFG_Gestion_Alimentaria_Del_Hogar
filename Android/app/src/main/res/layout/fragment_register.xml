<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Login.RegisterFragment"
    android:background="@drawable/fondo_login">

    <ImageButton
        android:id="@+id/irAtras"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_undo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/texto_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Eres nuevo por aquí? Registrate"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/irAtras" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegister"
        app:layout_constraintTop_toBottomOf="@+id/texto_register"
        tools:layout_editor_absoluteX="50dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/caja_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Nombre"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/name_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/custom_person_icon"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:hint="Nombre"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/caja_apellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Apellido"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/surname_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/custom_person_icon"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:hint="Apellido"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/caja_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Correo"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/mail_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/custom_mail_icon"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-light"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:hint="Correo"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/caja_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Contraseña"
                android:layout_marginTop="10dp"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/password_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/custom_pass_icon"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-light"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="15sp"
                android:hint="Contraseña"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:background="@drawable/button_style1"
        android:clickable="true"
        android:text="Registrarse"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>